# Configuration sécurisée pour l'application Budget Famille
# Copiez ce fichier vers .env et modifiez les valeurs

# JWT Configuration - OBLIGATOIRE POUR LA PRODUCTION
JWT_SECRET_KEY=your-secret-key-here-minimum-32-characters-please-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Encryption
ENABLE_DB_ENCRYPTION=true
DB_ENCRYPTION_PASSWORD=your-database-encryption-password-here

# Application Configuration
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Admin Configuration (changez en production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$12$EixZaYVK1fsbw1ZfbX3OXePaWxn96p02FZZE4b5qedxCUt8WQ.95.

# Upload Security
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=csv,xlsx,xls

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting (pour future implémentation)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=120

# Logging
LOG_FILE_PATH=./logs/budget_app.log
AUDIT_LOG_FILE_PATH=./logs/audit.log