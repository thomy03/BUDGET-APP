# ===================================================================
# BUDGET FAMILLE v2.3 - PRODUCTION ENVIRONMENT CONFIGURATION
# ===================================================================
# SECURITY: This template contains production-ready security settings
# DO NOT use default values - generate secure keys for each deployment

# === ENVIRONMENT ===
ENVIRONMENT=production
DEBUG=false
RELOAD_ON_CHANGE=false

# === SERVER CONFIGURATION ===
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=warning

# === CRITICAL SECURITY SETTINGS ===
# MANDATORY: Generate secure JWT key
# Command: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=REPLACE_WITH_SECURE_32_CHAR_KEY

# MANDATORY: Set production JWT settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# === DATABASE SECURITY ===
# PRODUCTION: Use encrypted database
ENABLE_DB_ENCRYPTION=true
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
DB_ENCRYPTION_KEY=REPLACE_WITH_SECURE_DB_KEY

DATABASE_URL=sqlite:///./budget.db
DATABASE_ECHO=false

# === CORS SECURITY ===
# CRITICAL: Set only your production domains
# Format: https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_ORIGINS=https://your-production-domain.com

# === RATE LIMITING (STRICT) ===
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_AUTH_PER_MINUTE=5
RATE_LIMIT_BURST_SIZE=5

# === FILE UPLOAD SECURITY ===
MAX_UPLOAD_SIZE=5
ALLOWED_EXTENSIONS=csv

# === SECURITY FEATURES ===
ENABLE_AUDIT_LOGGING=true
ENABLE_MAGIC_DETECTION=true
ENABLE_STRUCTURED_LOGGING=true

# === MONITORING & ALERTS ===
# Enable security monitoring
ENABLE_SECURITY_MONITORING=true
SECURITY_ALERT_EMAIL=security@yourcompany.com

# === SSL/TLS REQUIREMENTS ===
# Enforce HTTPS in production
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# ===================================================================
# PRODUCTION DEPLOYMENT CHECKLIST:
# 
# [ ] Generated unique JWT_SECRET_KEY (32+ characters)
# [ ] Generated unique DB_ENCRYPTION_KEY (32+ characters)  
# [ ] Set production CORS_ALLOWED_ORIGINS
# [ ] Configured monitoring and alerting
# [ ] Enabled database encryption
# [ ] Reduced token expiration time
# [ ] Applied strict rate limiting
# [ ] Disabled debug mode
# [ ] Set up SSL/TLS certificates
# [ ] Configured log aggregation
# [ ] Set up backup and recovery
# ===================================================================

# === DEPLOYMENT METADATA ===
DEPLOYMENT_VERSION=2.3.0
DEPLOYMENT_DATE=YYYY-MM-DD
DEPLOYED_BY=deployment-system