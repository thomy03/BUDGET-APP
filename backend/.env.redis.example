# Redis Configuration for Budget Famille v2.3
# Copy this file to .env and adjust settings for your environment

# === REDIS CACHE SETTINGS ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_SSL=false

# Connection Pool Settings
REDIS_MAX_CONNECTIONS=50
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Cache TTL Settings (in seconds)
REDIS_KEY_PREFIX=budget_family:
REDIS_DEFAULT_TTL=300          # 5 minutes - general cache
REDIS_SUMMARY_TTL=900          # 15 minutes - expensive calculations
REDIS_TRENDS_TTL=1800          # 30 minutes - trend analysis
REDIS_ANOMALY_TTL=600          # 10 minutes - anomaly detection

# Health Check Settings
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_MAX_RETRY_ATTEMPTS=3

# === CACHE CONTROL ===
CACHE_ENABLE_CACHE=true
CACHE_CACHE_TTL=300            # Fallback TTL
CACHE_MAX_CACHE_SIZE=1000      # Not used with Redis, kept for compatibility

# === DATABASE SETTINGS ===
# Your existing database settings here...
DB_DATABASE_URL=sqlite:///./budget.db
DB_ENABLE_ENCRYPTION=false

# === SECURITY ===  
# Your existing security settings here...
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# === DEVELOPMENT SETTINGS ===
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_ENABLE_SQL_LOGGING=false